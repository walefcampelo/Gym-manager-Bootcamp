<div class="frames">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url"
                    name= "avatar_url"
                    placeholder="http://"
                    value="{{ teacher.avatar-url }}"
                >
            </div>
        </div>
        
        <div class="frames">
            <div>Professor</div>
            <div>
                <input 
                    type="text"
                    name="name"
                    placeholder="Digite seu nome aqui"
                    value= "{{ teacher.name }}"
                >
            </div>
        </div>

        <div class="frames">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date"
                    name="birth"
                    value="{{ teacher.birth }}"
                >
            </div>
        </div>

        <div class="frames">
            <div>Grau de escolaridade</div>
            <div>
                <input      
                    type="text" 
                    name="formation"
                    value="{{ teacher.formation }}">
                
            </div>
        </div>

        <div class="frames">
            <div>Tipo de aula</div>
            <div>
                <span>
                    <input 
                        type="radio" 
                        name="type_class" 
                        value="P"
                        checked >
                        Presencial
                </span>
                <span>
                    <input 
                        type="radio" 
                        name="type_class"
                        value="D">
                        À distância
                </span>
            </div>
        </div>

        <div class="frames">
            <div>Área de atuação</div>
            <div>
                <input 
                    type="text"
                    name="services"
                    placeholder="Separe os itens selecionados por vírgula"
                    value="{{ teacher.services }}"
                >
            </div>
        </div>

        <button type="submit">Salvar</button>
{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section 
        class="avatar" 
        style= " background: url({{ teacher.avatar_url }}) center center">
    </section>
    
    <div class="details">

        <h3>Detalhes</h3>
        
        <div class="frames">
            <div>Nome completo</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="frames">
            <div>Idade</div>
            <div>{{ teacher.age }}</div>
        </div>

        <div class="frames">
            <div>Grau de escolaridade</div>
            <div>{{ teacher.formation }}</div>


        </div>

        <div class="frames">
            <div>Tipo de aula </div>
            <div>{{ "Presencial" if teacher.type_class == "P" else "À distância" }}</div>
        </div>

        <div class="frames">
            <div>Acompanhamento</div>
            <div>
            {% for service in teacher.services %}
                <span>{{ service }}</span>
            {% endfor %}
                
            </div>
        </div>

        <div class="frames">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>

        <a href="#" class="button">Editar</a>

    </div>

</div>
{% endblock content %}